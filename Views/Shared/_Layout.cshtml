<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Fashionista</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 70%;
            min-height: 30%;
            margin: auto;
        }

        #nav {
            line-height: 30px;
            height: 420px;
            width: 220px;
            float: left;
            padding: 5px;
            background-color: whitesmoke;
        }

        #navv {
            line-height: 30px;
            height: 650px;
            width: 220px;
            float: right;
            padding: 5px;
            background-color: whitesmoke;
        }

        #nad {
            line-height: 30px;
            height: 100px;
            width: 200px;
            float: left;
            padding: 5px;
            background-image: url("C:\Users\Muhib\Documents\Visual Studio 2013\Projects\project\asd.jpg");
        }

        div.img {
            margin: 10px;
            border: 1px solid #ccc;
            float: left;
            width: 280px;
        }

            div.img:hover {
                border: 1px solid #777;
            }

            div.img img {
                width: 100%;
                height: 350px;
            }

        div.desc {
            padding: 15px;
            text-align: center;
            width: 280px;
            height: 90px;
        }
    </style>



</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Fashionista", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    
                    <li>@Html.ActionLink("Admin", "Admin", "Home")</li>
                    <li>@Html.ActionLink("Checkout", "Cart", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="nav">
        <img src="~/Content/s.jpg" alt="company" style="width:213px;height:420px;">
    </div>

    <div id="navv">
        <img src="~/Content/op.jpg" alt="company" style="width:213px;height:650px;">
    </div>


    <div class="container body-content">
        <div>
            <img src="~/Content/asd.jpg" alt="company" hspace="80" style="width:60%;height:100px;">
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Fashionista online fashion store.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
